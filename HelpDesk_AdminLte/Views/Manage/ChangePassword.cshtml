@model HelpDesk_AdminLte.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменить пароль";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>

        <ol class="breadcrumb">
            <li>
                <i class="fa fa-fw fa-home"></i>
                @Html.ActionLink("Домашняя", "Index", "Home")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </section>
    <!-- Main content -->
    @{ if (ViewBag.SucsessMsg == null)
        {
            using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <section class="content">

                    @{ if (Model != null)
                        {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i>Ошибка </h4>
                        @Html.ValidationSummary()
                    </div>
                            }
                        }


                    <div class="box box-warning">

                        <div class="box-body">

                            <div class="row">
                                <div class="form-group col-md-2">
                                    @Html.LabelFor(model => model.OldPassword)
                                </div>
                                <div class="form-group col-md-4">

                                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @id = "password-field", autocomplete = "current-password", required = "required" } })
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group col-md-2">
                                    @Html.LabelFor(model => model.NewPassword)
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @id = "password-field", autocomplete = "current-password", required = "required" } })
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group col-md-2">
                                    @Html.LabelFor(model => model.ConfirmPassword)
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "password-field", autocomplete = "current-password", required = "required" } })
                                </div>

                            </div>

                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                        </div>
                        <!-- /.box-body -->
                    </div>

                    <!-- /.box -->
                    <!-- /.row -->
                   
                </section>
                <!-- /.content -->
            }
        }

        else
        {
            <div class="alert alert-success alert-dismissible">

                <h4><i class="icon fa fa-check"></i> @ViewBag.SucsessMsg</h4>
            </div>
        }
    }
</div>
<!-- /.content-wrapper -->



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

