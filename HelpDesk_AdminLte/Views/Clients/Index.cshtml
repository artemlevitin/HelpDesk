@model IEnumerable<HelpDesk_AdminLte.Models.Clients>

@{
    ViewBag.Title = "Клиенты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Клиенты
            <small>список</small>
        </h1>
        <ol class="breadcrumb">
            <li>
            <i class="fa fa-fw fa-home"></i>
            @Html.ActionLink("Домашняя", "Index", "Home")</li>
            <li class="active">Клиенты</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-2" style="margin: 10px">
                <i class="fa fa-fw fa-edit"></i>
                @Html.ActionLink("Создать", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>

        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                       
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Active)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Companies.Name)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.CheckBoxFor(modelItem => item.Active, new { @disabled = "disabled" })
                                    </td>
                                    <td>
                                        @Html.ActionLink(@Html.ValueFor(modelItem => item.Name).ToString(), "Details", new { id = item.ClientID }, new { title = "Описание" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Companies.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>

                                        <div class="form-group col-md-6">
                                            @{if (@Html.ValueFor(modelItem => item.Image) != null)
                                                {
                                                    try
                                                    {
                                                        <img class="img-thumbnail" src="@Html.ValueFor(modelItem => item.Image).ToString()" alt="Photo">
                                                    }
                                                    catch (Exception ex) { }
                                                }
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @Html.ActionLink("Редактировать", "Edit", new { id = item.ClientID }) 
                                      
                                        @*@using (Html.BeginForm("Delete", "Clients", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.ClientID" />
                                            <button type="submit">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                Удалить из списка
                                            </button>
                                        }*@

                                    </td>
                                </tr>
                                }

                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Active)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Companies.Name)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>

}
