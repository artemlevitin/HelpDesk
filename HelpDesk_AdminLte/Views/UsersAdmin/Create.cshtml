@model HelpDesk_AdminLte.Models.RegisterViewModel
@{
    ViewBag.Title = "Создать";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Пользователь @ViewBag.Title
        </h1>

        <ol class="breadcrumb">
            <li>
                <i class="fa fa-fw fa-home"></i>
                @Html.ActionLink("Домашняя", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Пользователи", "Index")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </section>
    <!-- Main content -->
    @using (Html.BeginForm("Create", "UsersAdmin"))
    {
        @Html.AntiForgeryToken()

        <section class="content">
            @{if (@ViewBag.ErrorMsg != null)
                {
                    <div class="error-content">
                        <i class="fa fa-warning text-yellow"></i>
                        @ViewBag.ErrorMsg
                        @Html.ValidationMessage("Ошибка")
                    </div>
                }
            }

            <div class="box box-warning">

                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.Email)
                        </div>
                        <div class="form-group col-md-4">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ", placeholder = "Введите адрес эл. почты", type = "email", required = "required" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.Password)
                        </div>
                        <div class="form-group col-md-4">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "password-field", autocomplete = "current-password", placeholder = "Пароль", required = "required" } })
                        </div>
                      
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.ConfirmPassword)
                        </div>
                        <div class="form-group col-md-4">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "password-field", autocomplete = "current-password", placeholder = "Подтвердить пароль", required = "required" } })
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            @foreach (var item in (SelectList)ViewBag.RoleId)
                            {
                                <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                                @Html.Label(item.Value, new { @class = "control-label" })
                            }
                        </div>
</div>
                </div>
               
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                    <!-- /.box-body -->
                </div>

                    <!-- /.box -->
                    <!-- /.row -->
                   
</section>
        <!-- /.content -->
    }
</div>
<!-- /.content-wrapper -->



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

