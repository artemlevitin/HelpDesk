@model IEnumerable<HelpDesk_AdminLte.Models.Requests>


@{
    ViewBag.Title = "Заявки список";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Заявки
            <small>список</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-fw fa-home"></i>
                @Html.ActionLink("Домашняя", "Index", "Home")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-2" style="margin: 10px">

                <i class="fa fa-fw fa-edit"></i>
                @Html.ActionLink("Создать", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })

            </div>

        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        @*<h3 class="box-title">Data Table With Full Features</h3>*@
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RequestID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateCreateRequest)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NameRequest)
                                    </th>
                                    <th>
                                        Создатель
                                    </th>
                                    <th>
                                        Клиент
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Priority.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Support.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateRequest)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RequestID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateCreateRequest)
                                        </td>
                                        <td>
                                            @Html.ActionLink(@Html.ValueFor(modelItem => item.NameRequest).ToString(), "Details", new { id = item.RequestID }, new { title = "Описание" })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Clients.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Priority.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Support.Name)
                                        </td>
                                        <td>
                                            @{if (item.DateRequest < DateTime.Now)
                                                {<i class="fa fa-warning text-yellow"></i>
                                            <span class="label label-danger"/>}
                                                }
                                                @Html.DisplayFor(modelItem => item.DateRequest)
                                        </td>


                                        <td>
                                            @Html.ActionLink("Изменить", "Edit", new { id = item.RequestID }, htmlAttributes: new { @class = "btn btn-default btn-flat-lg" })
                                        </td>
                                       

                                    </tr>
                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RequestID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateCreateRequest)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NameRequest)
                                    </th>
                                    <th>
                                        Создатель
                                    </th>
                                    <th>
                                        Клиент
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Priority.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Support.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateRequest)
                                    </th>

                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>

}
