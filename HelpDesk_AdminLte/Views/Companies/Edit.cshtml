@model HelpDesk_AdminLte.Models.Companies

@{
    ViewBag.Title = "Редактировать";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title="Компании"
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-fw fa-home"></i>
                @Html.ActionLink("Домашняя", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Компании", "Index")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </section>


    <!-- Main content -->
    @using (Html.BeginForm("Edit", "Companies"))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.CompanyID)
     
        <section class="content">

            <div class="box box-warning">

                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-xs-6">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control ", placeholder = "Введите имя компании", required = "required" } })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Location)
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control " } })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Phone)
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control " } })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ", type = "email" } })
                        </div>
                    </div>


                    
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.Active)
                </div>
                <div class="form-group col-md-4">
                    @Html.EditorFor(model => model.Active, new { htmlAttributes = new { @class = "icheckbox_minimal-red" } })
                </div>
                <div class="box-footer">
                    <div class="row">

                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>

                </div>
                <!-- /.box-body -->

            </div>
            @Html.ActionLink("Вернуться к списку", "Index")
            <!-- /.box -->
            <!-- /.row -->
        </section>
        <!-- /.content -->
    }
</div>
<!-- /.content-wrapper -->
